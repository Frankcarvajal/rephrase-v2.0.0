{
  "name": "rephrase",
  "version": "0.1.0",
  "description": "Translation and chat app",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "heroku-postbuild": "cd client && yarn install --only=dev && yarn run build",
    "dev": "run-p dev:server dev:client start",
    "dev:client": "cd client && cross-env BROWSER=none yarn start -- --color=always | xp http://localhost:3000/ http://localhost:8080/",
    "dev:server": "cd server && yarn start",
    "install": "run-s install:server install:client",
    "install:server": "cd server && yarn install",
    "install:client": "cd client && yarn install"
  },
  "cacheDirectories": [
    "node_modules",
    "server/node_modules",
    "client/node_modules"
  ],
  "author": "Thinkful cohort 9",
  "license": "MIT",
  "dependencies": {
    "cross-env": "^3.1.4",
    "dotenv": "^4.0.0",
    "express": "^4.14.1",
    "http-proxy-middleware": "^0.17.3",
    "npm-run-all": "^4.0.1",
    "request": "^2.81.0",
    "request-promise-native": "^1.0.4",
    "socket.io": "^2.0.3",
    "xp": "^1.0.1"
  }
}
